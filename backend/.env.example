# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=4000
NODE_ENV=development

# ============================================
# DATABASE
# ============================================
# Local development
MONGO_URI=mongodb://localhost:27017/ezyvoting

# OR MongoDB Atlas (production)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ezyvoting-prod?retryWrites=true&w=majority

# ============================================
# BLOCKCHAIN
# ============================================
CONTRACT_ADDRESS=0xYourDeployedContractAddress
NETWORK=sepolia
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_very_long_random_secret_minimum_32_chars
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Session secret
SESSION_SECRET=another_random_secure_string

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS & DOMAINS
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=noreply@ezyvoting.app

# ============================================
# MONITORING & LOGGING
# ============================================
SENTRY_DSN=
LOG_LEVEL=debug

# ============================================
# ADMIN SETUP
# ============================================
ADMIN_INVITE_CODE=demo-invite-123

# ============================================
# ETHERSCAN (optional)
# ============================================
ETHERSCAN_API_KEY=your_etherscan_api_key_here
